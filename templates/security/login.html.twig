{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container-form-auth">
    <h1>Optical Center | Potentiel Client Audio | Angers - Grand-Maine</h1>
    <img src="https://i3.optical-center.fr/workspace/medias/images/2020/logo-oc-blanc-fr-res.svg" style="width: 200px; height: auto;">
    <form method="post">
        {% if error %}
            <div class="alert alert-{{ error }}">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="messageLog">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se Déconnecter</a>
            </div>
        {% endif %}

        <h3>Identifiez-vous</h3>
        <div class="inputForm">
            <div class="grp-1">
                <label for="inputUsername">Identifiant</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="grp-2">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
            </div>
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
        </div>
        <div class="btn_s fill">
            <button class="btn" type="submit">
                Connexion
            </button>
        </div>
    </form>
</div>
{% endblock %}
